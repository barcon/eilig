# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  eilig_config = debug

else ifeq ($(config),release)
  eilig_config = release

else ifeq ($(config),releasecl)
  eilig_config = releasecl

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := eilig

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

eilig:
ifneq (,$(eilig_config))
	@echo "==== Building eilig ($(eilig_config)) ===="
	@${MAKE} --no-print-directory -C . -f eilig.make config=$(eilig_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f eilig.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  releasecl"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   eilig"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"